# NovaHost Debug Configuration
# Place this file in the same directory as NovaHost.exe to enable extended debugging

# Logging settings
EnableConsoleOutput=1
LogLevel=Verbose       # Options: Off, Basic, Normal, Verbose, Debug
LogToFile=1
LogFilePath=novahost_debug.log
MaxLogFileSize=10      # Maximum log file size in MB
LogFileRotation=3      # Number of backup log files to keep

# Performance Monitoring
TrackMemoryUsage=1
TrackCPUUsage=1
ReportPerformanceMetrics=1
PerformanceMetricsInterval=10000     # Milliseconds between performance reports

# Plugin Debugging
LogPluginScanning=1
LogPluginLoading=1
LogPluginErrors=1
TrackPluginCrashes=1
CatchPluginExceptions=1
RecordBlockedPlugins=1

# Audio Settings
LogAudioDeviceChanges=1
TrackAudioDropouts=1
AudioDropoutThreshold=5.0    # Milliseconds

# UI Debugging
TrackUIEvents=1
LogUIErrors=1

# Crash Handling
CreateCrashDumps=1
AutoRestartOnCrash=0
MaxCrashDumps=5
CrashDumpFolder=crash_dumps

# Testing Features
EnableTestingCommands=1
EnableStressTests=1